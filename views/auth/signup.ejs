<form action="/auth/signup" method="POST">
    <div class="container">
      <h1>Register</h1>
      <p>Please fill in this form to create an account.</p>
      <hr>
  
      <label for="email"><b>Username</b></label>
      <input type="text" placeholder="Enter Username" name="username" id="username" required>
  
      <label for="psw"><b>Password</b></label>
      <input type="password" placeholder="Enter Password" name="password" id="psw" required>
  
      <label for="psw-repeat"><b>Repeat Password</b></label>
      <input type="password" placeholder="Repeat Password" name="password2" id="psw-repeat" required>
      <hr>
      <% if (locals.errorMsg) { %>
        <% errorMsg.forEach(function(error) { %>
        <div style="color:red"><%= error %></div>
        <% })} %>
        <% if (locals.attemptedUser) { %>
          <div style="color:red">The user <%= locals.attemptedUser %> does not exist. You can create that user here~</div>
        <% } %>
        <br>
      <input type="submit" name="log" id="log" value="Register">     
  
    </div>
  
    <div class="container signin">
      <p>Already have an account? <a href="/login.html">Sign in</a>.</p>
    </div>
  </form>